modules = ["nodejs-20", "web", "postgresql-16"]
run = "npm run start"
hidden = [".config", ".git", "node_modules", "dist"]

[nix]
channel = "stable-24_05"

[deployment]
deploymentTarget = "autoscale"
build = "npm run build"
run = "npm run start"

[[ports]]
localPort = 5000
externalPort = 9000

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

# Environment variables for different environments
[env]
NODE_ENV = "production"
DATABASE_URL = "your_production_database_url"
API_KEY = "your_production_api_key"

# Deployment steps for database migrations
[[deployment.steps]]
name = "Run database migrations"
run = "npm run db:push"

# Comments explaining the purpose of each section and key settings
# - modules: Specifies the modules to be used
# - run: Command to start the application
# - hidden: List of hidden files and directories
# - nix: Specifies the Nix channel
# - deployment: Deployment settings
# - ports: Port mappings
# - workflows: Workflow settings
# - env: Environment variables
# - deployment.steps: Steps to be executed during deployment
